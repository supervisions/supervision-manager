<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
     <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
     <mapping path="/client/center/*" decorator="/page/decorators/centerMain.jsp" />
     <mapping path="/client/application/my*" decorator="/page/decorators/clientMain.jsp" />
     <mapping path="/server/*" decorator="/page/decorators/serverMain.jsp" />
     <mapping path="/system/*" decorator="/page/decorators/serverMain.jsp" />
     <mapping path="/app/*" decorator="/page/decorators/serverMain.jsp" />
     <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
     <mapping path="**/source/**" exclue="true" />
     <mapping path="**/index.do**" exclue="true" />
     <mapping path="**/logout.do**" exclue="true" />
     <mapping path="**/login.do**" exclue="true" />
     <mapping path="**/**login.do" exclue="true" />
     <mapping path="**/**register.do" exclue="true" />
     <mapping path="**/system/user/json**" exclue="true" />
     <mapping path="**/system/role/json**" exclue="true" />
     <mapping path="**/system/function/json**" exclue="true" />
     <mapping path="**/system/permission/json**" exclue="true" />
     <mapping path="**/system/organ/json**" exclue="true" />
     <mapping path="**/system/resource/json**" exclue="true" />
     <mapping path="**/client/application/json*" exclue="true" />
     <mapping path="**/server/json**" exclue="true" />
     <mapping path="**/app/resource/json**" exclue="true" />
     <mapping path="**/api/v1/**" exclue="true" />
</sitemesh>
    
